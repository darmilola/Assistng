<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F8"
    android:orientation="vertical"
    tools:context="UIs.AccountFragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="My Account"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/clannews"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/settings_layout"
            android:gravity="right|center">

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center|top">



            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/account_profile_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/profileplaceholder"/>

            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="llham Maulana"
                android:maxLines="1"
                android:id="@+id/account_name"
                android:ellipsize="end"
                android:fontFamily="@font/clanbook"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:id="@+id/account_switch_account"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/switch_acc"
                        android:tint="#454647" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Switch Account"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_users_dashboard"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/dashboard_icon"
                        android:tint="#454647"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="My Dashboard"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_users_verification"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/verification_icon"
                        android:tint="#454647"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Verification"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:id="@+id/verification_badge"
                        android:src="@drawable/pink_radius"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_provide_a_service"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/_931179_faq_help_question_support_information_icon"
                        android:tint="#454647"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Provide a Service Admin"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_accomodation_admin"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/_463468_home_media_network_social_icon"
                        android:tint="#454647"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="House Admin"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_about_us"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/about_us"
                        android:tint="#454647"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="About us"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_rate_us"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/rate_us"
                        android:tint="#454647"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Rate us on Playstore"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/account_log_out"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/logout_icon"
                        android:tint="#454647"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|left">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Log Out"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/clanbook"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:gravity="right|center">
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="5dp"
                        android:rotation="180"
                        android:src="@drawable/iconfinder_chevron_left_4781844"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/clannews"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="FAQs"
                    android:id="@+id/faqs"
                    android:textColor="#4F565A"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:rotation="180"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/iconfinder_chevron_left_4781844"
                    android:tint="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/clannews"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:id="@+id/why_assist"
                    android:text="Why Use Assist.ng"
                    android:textColor="#4F565A"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:rotation="180"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/iconfinder_chevron_left_4781844"
                    android:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:id="@+id/contact_us"
                    android:fontFamily="@font/clannews"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="Contact Us"
                    android:textColor="#4F565A"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:rotation="180"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/iconfinder_chevron_left_4781844"
                    android:tint="@color/colorPrimary"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/clannews"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginBottom="70dp"
                android:text="\u00A9 Assist 2022"
                android:textColor="#4F565A"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>