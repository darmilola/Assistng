<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UIs.QuickCreditsAmount">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Quick Credit"
        android:gravity="center"
        android:textSize="35dp"
        android:fontFamily="@font/kumelianbold"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/clannews"
        android:gravity="center|left"
        android:text="Loan Amount"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/quick_credits_select_amount"
        style="@style/sign_up_field"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Select Amount"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:background="@drawable/edit_profile_edittext_background"/>


    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/clannews"
        android:text="Authenticate"
        android:textAllCaps="false"
        android:id="@+id/loan_authenticate_button"
        android:textSize="15dp"
        app:cornerRadius="25dp"/>


</LinearLayout>