<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="280dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kano - Abuja"
                android:layout_marginTop="10dp"
                android:id="@+id/transport_dialog_route"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$5000"
                android:layout_marginTop="10dp"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:id="@+id/transport_dialog_fare"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact phone"
                android:layout_marginTop="10dp"
                android:id="@+id/input_dialog_title"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:maxLines="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:maxLength="300"
                android:id="@+id/transport_dialog_phone"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Book Now"
                    android:id="@+id/transport_dialog_booknow"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="false"
                    app:backgroundTint="#059249"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>