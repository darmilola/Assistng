<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:strokeColor="#90c8c8c8"
        app:strokeWidth="0.5dp"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/White">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="4.5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="2"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/bus_transport_route_layerlist"/>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Lagos Island"
                            android:textSize="13dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/bus_item_from"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Central Business District"
                            android:textSize="13dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/bus_item_to"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/clannews"
                            android:gravity="center|left"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:cornerRadius="4dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="$1,150"
                        android:id="@+id/bus_item_book"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        app:backgroundTint="@color/pinkypinky"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        app:cornerRadius="4dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="Call"
                        android:id="@+id/bus_item_call"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12dp"
                        app:backgroundTint="@color/green"/>
                </LinearLayout>
            </LinearLayout>




        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dotted_line"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_marginTop="4dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/location_pin_2_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is the Meeting point"
                    android:textSize="10dp"
                    android:id="@+id/bus_item_meeting_point"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="20dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/_305639_company_crowd_group_people_team_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 seats"
                    android:textSize="10dp"
                    android:id="@+id/bus_item_seats"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/iconfinder__building_company_city_house_officel_apartment_architecture_4213476"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GIGM travel and Logistics"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/bus_item_company"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/_120278_bus_car_traffic_transport_transportation_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/bus_item_type"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>

            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:tint="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/_853744_calendar_kashifarif_date_schedule_appoinment_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="November 25"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/bus_departure_date"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/_11948_alarm_clock_date_event_schedule_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7:00 AM"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/bus_departure_time"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/clannews"/>

            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>