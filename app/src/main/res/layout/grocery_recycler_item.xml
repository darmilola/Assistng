<?xml version="1.0" encoding="utf-8"?>
<ng.assist.UIs.GroceryGridviewItemModel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:layout_height="320dp">

      <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:strokeWidth="0.5dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#FDFDFF">

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="10dp"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="220dp"
                      android:layout_height="170dp"
                      android:layout_gravity="center"
                      android:id="@+id/grocery_product_image"
                      android:src="@drawable/capsicum" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="5dp"
                      android:ellipsize="end"
                      android:id="@+id/grocery_product_name"
                      android:fontFamily="@font/clannews"
                      android:maxLines="2"
                      android:text="Capsicum Pepper Product"
                      android:textColor="@color/colorPrimary"
                      android:textSize="13dp" />

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="5dp"
                      android:orientation="horizontal">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:ellipsize="end"
                          android:id="@+id/grocery_product_price"
                          android:fontFamily="@font/clannews"
                          android:maxLines="1"
                          android:text="$50"
                          android:textColor="@color/colorPrimary"
                          android:textSize="20dp" />
                  </LinearLayout>
              </LinearLayout>
          </FrameLayout>
      </com.google.android.material.card.MaterialCardView>
    </ng.assist.UIs.GroceryGridviewItemModel>


