<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/special_activity_background"
    tools:context=".GroceryStoreListing"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/special_activity_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:id="@+id/eccommerce_details_back"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:id="@+id/store_listing_cart"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="right">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Available"
                    android:id="@+id/ecc_dashboard_products_availability"
                    android:checked="true"/>

            </LinearLayout>
        </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/clanmed"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:id="@+id/ecc_dashboard_products_title"
                    android:text="Fresh Pakistani Capsicum"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mudassir Supermarket Kano"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/ecc_dashboard_store_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="@color/light_text_color"
                    android:fontFamily="@font/clannews"/>

        <include layout="@layout/product_image_scrollview"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NGN 25,000"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        android:id="@+id/ecc_dashboard_products_price"
                        android:fontFamily="@font/clanbold"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginLeft="16dp"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/clanmed"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/clannews"
                    android:maxLines="10"
                    android:ellipsize="end"
                    android:id="@+id/ecc_dashboard_products_description"
                    android:lineSpacingExtra="7dp"
                    android:text="Garlic Grows in many parts of the world and is a popular ingredient in cooking due to it's strong smell and delicious taste garlic is very delicious but has very few colories"
                    android:textColor="#3D3C3C"
                    android:textSize="14dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danger Zone*"
            android:layout_marginLeft="16dp"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/clanmed"
            android:textColor="@color/colorPrimary"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ecc_dashboard_products_delete"
            app:backgroundTint="@color/pinkypinky"
            android:text="Delete this product"
            android:textAllCaps="false"/>


    </LinearLayout>
    </ScrollView>
</LinearLayout>