<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:layout_marginLeft="35dp"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:id="@+id/cab_item_image"
                android:src="@drawable/bus_transportation_vehicle_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:id="@+id/cab_item_type"
                    android:textColor="@color/dark_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Bus"
                    android:gravity="center"
                    android:fontFamily="@font/clanbook"/>
                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:src="@drawable/yellow_circle"
                    android:tint="@color/dark_text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:id="@+id/cab_item_passenger"
                    android:textColor="@color/dark_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="5 Seats remaining"
                    android:gravity="center"
                    android:fontFamily="@font/clanbook"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/cab_item_phone"
                    android:backgroundTint="@color/proposed_color"
                    android:background="@drawable/transport_mode_unselected_background">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_local_phone_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/cab_item_chat"
                    android:backgroundTint="@color/proposed_color"
                    android:background="@drawable/transport_mode_unselected_background">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:tint="@color/white"
                        android:src="@drawable/paper_dollars_2_2x"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>