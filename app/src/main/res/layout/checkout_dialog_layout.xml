<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="550dp"
    android:background="@color/transparent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="550dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Checkout Info"
                android:layout_marginTop="10dp"
                android:id="@+id/input_dialog_title"
                android:textColor="@color/dark_text_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_text_color"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="300"
                android:id="@+id/checkout_dialog_delivery_address"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Closest Landmark"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_text_color"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="300"
                android:id="@+id/checkout_dialog_closest_landmark"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_text_color"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="300"
                android:id="@+id/checkout_dialog_state"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LGA"
                android:layout_marginTop="10dp"
                android:textColor="@color/light_text_color"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="300"
                android:id="@+id/checkout_dialog_lga"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Phone"
                android:layout_marginTop="30dp"
                android:textColor="@color/light_text_color"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:hint="Type here..."
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="300"
                android:id="@+id/checkout_dialog_delivery_phone"
                android:background="@drawable/edittext_background"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="right|center"
                android:layout_marginTop="10dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Check Out"
                    android:id="@+id/check_out_dialog_button"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="false"
                    app:backgroundTint="#059249"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>