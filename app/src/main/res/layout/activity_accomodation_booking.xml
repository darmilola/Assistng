<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F5F8"
    tools:context=".AccomodationBooking">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:nestedScrollingEnabled="false"
        android:id="@+id/home_booking_images_recyclerview"
        tools:listitem="@layout/home_booking_image"
        tools:itemCount="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center|left"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/clanmed"
            android:text="Harmony Studios"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:tint="@color/pinkypinky"
            android:src="@drawable/iconfinder_like"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#0FAA31"
            android:background="@drawable/accomodation_rating_background"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/clannews"
                android:gravity="center"
                android:text="4.9"
                android:textColor="@color/White"
                android:textSize="15dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/clannews"
            android:gravity="center"
            android:text="290 ratings"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:tint="@color/pinkypinky"
            android:src="@drawable/location_pin_1_2x"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/clannews"
            android:gravity="center"
            android:text="World trade center Abuja Nigeria"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/dark_text_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:tint="@color/pinkypinky"
            android:src="@drawable/iconfinder_bathtub"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/clanbold"
            android:gravity="center"
            android:text="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/dark_text_color"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:tint="@color/pinkypinky"
            android:src="@drawable/iconfinder_twin_bed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/clanbold"
            android:gravity="center"
            android:text="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/dark_text_color"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:gravity="center|left"
        android:textSize="17dp"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/clannews"
        android:text="Listing Agent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/model"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="The Agent Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/clannews"
                android:text="Owner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/transport_mode_unselected_background">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_local_phone_black_24dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:maxLines="1"
        android:gravity="center|left"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/clannews"
        android:text="Description"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="7"
        android:gravity="center|left"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/light_text_color"
        android:fontFamily="@font/clannews"
        android:text="@string/long_text"/>
</LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F6F5F8"
        android:layout_alignParentBottom="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center|top"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center|left"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:textColor="#0FAA31"
            android:fontFamily="@font/clannews"
            android:text="200,000"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Book Now"
            android:textSize="17dp"
            app:cornerRadius="5dp"
            android:textAllCaps="false"
            android:fontFamily="@font/clannews"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>