<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusCheckOut"
    android:background="#F6F5F8">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/iconfinder_chevron_left_4781844"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="Check Out"
                 android:textSize="20dp"
                 android:layout_marginLeft="10dp"
                 android:fontFamily="@font/clannews"
                 android:gravity="center|left"
                 android:textColor="@color/colorPrimary"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/bus_background_busview_design">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="7dp">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/glogo"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:weightSum="3">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_weight="3"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="70dp"
                                        android:layout_height="100dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:text="11:00"
                                            android:textSize="12dp"
                                            android:layout_alignParentTop="true"
                                            android:textColor="@color/colorPrimary"
                                            android:fontFamily="@font/clannews"
                                            android:gravity="center"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:text="15:00"
                                            android:textSize="12dp"
                                            android:layout_alignParentBottom="true"
                                            android:textColor="@color/colorPrimary"
                                            android:fontFamily="@font/clannews"
                                            android:gravity="center"/>
                                    </RelativeLayout>
                                    <ImageView
                                        android:layout_width="10dp"
                                        android:layout_height="100dp"
                                        android:layout_marginRight="5dp"
                                        android:src="@drawable/bus_transport_route_layerlist"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:text="Lagos Island"
                                            android:textSize="13dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:layout_marginRight="10dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_alignParentTop="true"
                                            android:textColor="@color/colorPrimary"
                                            android:fontFamily="@font/clannews"
                                            android:gravity="center|left"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:text="Central Business District"
                                            android:textSize="13dp"
                                            android:maxLines="1"
                                            android:layout_marginRight="10dp"
                                            android:ellipsize="end"
                                            android:layout_alignParentBottom="true"
                                            android:textColor="@color/colorPrimary"
                                            android:fontFamily="@font/clannews"
                                            android:gravity="center|left"
                                            android:layout_marginLeft="10dp"/>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:src="@drawable/dotted_line"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_marginTop="4dp"
                                android:gravity="center|left"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="4dp"
                                    android:tint="@color/colorPrimary"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/location_pin_2_2x"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="125 Km"
                                    android:textSize="14dp"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/clannews"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentRight="true">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="20dp"
                                    android:tint="@color/colorPrimary"
                                    android:src="@drawable/time_icon"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Travel time 35min"
                                    android:textSize="13dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/clannews"/>

                            </LinearLayout>

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/dotted_line"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp">
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Seat No."
                                    android:textSize="13dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/clannews"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/clannews"
                                    android:maxLines="1"
                                    android:text="25"
                                    android:textColor="#0E5E41"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="7dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ticket Price"
                                android:textSize="14dp"
                                android:textColor="@color/light_text_color"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/clannews"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$250"
                                android:layout_marginRight="10dp"
                                android:textSize="18dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/clannews"/>

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fare Tax"
                                android:textSize="14dp"
                                android:textColor="@color/light_text_color"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/clannews"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$250"
                                android:layout_marginRight="10dp"
                                android:textSize="18dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/colorPrimary"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/clannews"/>

                        </LinearLayout>

                    </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/dotted_line"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="15dp">

                            <LinearLayout
                                android:layout_width="130dp"
                                android:layout_marginTop="4dp"
                                android:gravity="center|left"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Amount"
                                    android:textSize="14dp"
                                    android:textColor="@color/pink"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/clannews"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentRight="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$250"
                                    android:layout_marginRight="10dp"
                                    android:textSize="20dp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@color/pink"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/clannews"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    app:cornerRadius="7dp"
                    android:id="@+id/bus_checkout_paynow"
                    android:text="Pay Now"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/clannews"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/pink"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>