<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:visibility="gone"
    android:id="@+id/error_occurred_layout_root"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/error_notice_virus_warning_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:fontFamily="@font/clannews"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Error Occurred Please try again"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:id="@+id/error_occurred_retry"
        android:textSize="17sp"
        android:fontFamily="@font/clannews"
        android:text="Retry"/>

</LinearLayout>