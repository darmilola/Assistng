<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F5F8"
    android:gravity="center"
    tools:context=".AccomodationBooking">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/estate_dashboard_details_progress"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/estate_dashboard_details_nested_scroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/product_image_scrollview"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:id="@+id/estate_dashboard_details_title"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/clanmed"
                    android:text="Harmony Studios"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:tint="@color/pink"
                    android:src="@drawable/location_pin_1_2x"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/clannews"
                    android:gravity="center"
                    android:text="World trade center Abuja Nigeria"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:id="@+id/estate_dashboard_details_address"
                    android:ellipsize="end"
                    android:textColor="@color/dark_text_color"
                    android:textSize="14dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGN 20,000/month"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                android:id="@+id/estate_dashboard_details_price"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/clanmed"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="Description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="7"
                android:gravity="center|left"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:id="@+id/estate_dashboard_details_description"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/clannews"
                android:text="@string/long_text"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="User Reason"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="7"
                android:gravity="center|left"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:id="@+id/refund_user_reason"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/clannews"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="User Evidence"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/user_evidence"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="Agent Reason"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="7"
                android:gravity="center|left"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:id="@+id/refund_agent_reason"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/clannews"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:gravity="center|left"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/clannews"
                android:text="Agent Evidence"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/agent_evidence"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/refund_approve_refund"
                    app:backgroundTint="@color/green"
                    android:text="Approve Refund"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/refund_release_fund"
                    app:backgroundTint="@color/pink"
                    android:text="Release Fund"
                    android:textAllCaps="false"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>